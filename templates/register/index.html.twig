{% extends 'base.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block body %}
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh">
        <div class="card shadow p-4" style="width: 450px; border-radius: 14px;">

            <h2 class="text-center mb-4 fw-semibold">Créer un compte</h2>

            {{ form_start(registrationForm) }}

            <!-- Email -->
            {{ form_row(registrationForm.email, {
                label: "Adresse Email",
                attr: {class: "form-control"}
            }) }}

            <!-- Nom -->
            {{ form_row(registrationForm.nom, {
                label: "Nom complet",
                attr: {class: "form-control"}
            }) }}

            <!-- Type -->
            <div class="mb-3">
                <label class="form-label">Vous êtes :</label>
                <div class="d-flex gap-2">
                    {{ form_widget(registrationForm.type) }}
                </div>
                {{ form_errors(registrationForm.type) }}
            </div>

            <!-- Mot de passe (2 champs) -->
            {{ form_row(registrationForm.plainPassword.first, {
                label: "Mot de passe",
                attr: {class: "form-control"}
            }) }}

            {{ form_row(registrationForm.plainPassword.second, {
                label: "Confirmer le mot de passe",
                attr: {class: "form-control"}
            }) }}

            <button type="submit" class="btn btn-primary w-100 mt-3" style="border-radius:8px;">
                S’inscrire
            </button>

            {{ form_end(registrationForm) }}

            <div class="text-center mt-3">
                <small>Vous avez déjà un compte ? <a href="{{ path('app_login') }}">Se connecter</a></small>
            </div>

        </div>
    </div>
{% endblock %}
